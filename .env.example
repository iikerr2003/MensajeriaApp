# Database Configuration
# Use PostgreSQL for production
DATABASE_URL=postgresql://mensajeria_user:mensajeria_password@localhost:5432/mensajeria

# Or use SQLite for development (comment out PostgreSQL above)
# DATABASE_URL=sqlite:///mensajeria.db

# JWT Configuration
# Generate secure keys with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-here-generate-a-secure-one
JWT_REFRESH_SECRET_KEY=your-refresh-secret-key-different-from-above
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_AUTH_PER_MINUTE=20

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mensajeria.log

# Email Configuration (optional, for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
